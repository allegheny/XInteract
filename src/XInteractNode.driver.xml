<!--This file instructs XInteract how to connect to the database.-->
<!--In the 'class' attribute of the 'driver' node specify the class of your JDBC driver.-->
<!--In the 'url' node specify the correct URI for the database.-->
<!--In the 'login' node specify the correct username and password for database access.-->
<?xml version="1.0" encoding="utf-8"?>
<driver project-version="2.0" class="org.apache.derby.jdbc.ClientDriver">
	<url value="jdbc:derby://your.host:port/XIDB;create=true"/>
	<connectionPool min="1" max="1" />
	<login userName="username" password="password"/>
</driver>
